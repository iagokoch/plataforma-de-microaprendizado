    <!-- Título da página e gráfico/mensagem -->
    <div class="page-title">
      <% if (!user) { %>
      <p style="color: #7950f2; font-size: 1.2rem; margin-top: 1rem">
        Faça Login para ter acesso ao gráfico
      </p>
      <% } else { %>
      <canvas
        id="sequenciaGrafico"
        width="400"
        height="150"
        style="margin-top: 1rem"
      ></canvas>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        // Exemplo de dados fictícios para o gráfico
        const ctx = document
          .getElementById("sequenciaGrafico")
          .getContext("2d");
        new Chart(ctx, {
          type: "line",
          data: {
            labels: ["Seg", "Ter", "Qua", "Qui", "Sex", "Sáb", "Dom"],
            datasets: [
              {
                label: "Dias de estudo",
                data: [1, 1, 0, 1, 1, 0, 1],
                borderColor: "#7950f2",
                backgroundColor: "rgba(121, 80, 242, 0.1)",
                fill: true,
                tension: 0.4,
              },
            ],
          },
          options: {
            scales: {
              y: { beginAtZero: true, stepSize: 1 },
            },
          },
        });
      </script>
      <% } %>
    </div>

