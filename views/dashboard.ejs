    <script>
      const subjectsMenu = document.querySelector(".subjects-menu");
      const videoGrid = document.querySelector(".video-grid");

      // Static placeholder video card HTML
      const placeholderVideoCardHTML = `
        <div class="video-card">
          <div class="video-placeholder">Vídeo</div>
          <div
            style="
              display: flex;
              justify-content: center;
              padding: 1rem;
              background: white;
              border-top: 1px solid #eee;
            "
          >
            <a href="/aula/1" style="text-decoration: none">
              <button
                class="btn-ver-aula"
                style="
                  background: #7950f2;
                  color: white;
                  border: none;
                  border-radius: 6px;
                  padding: 0.5rem 1.2rem;
                  font-size: 1rem;
                  cursor: pointer;
                  transition: background 0.2s;
                "
              >
                Ver Aula
              </button>
            </a>
          </div>
        </div>
      `;

      // Function to fetch and display subjects
      async function fetchAndDisplaySubjects() {
        try {
          const response = "/api/materias";
          const subjects = await response.json();

          subjectsMenu.innerHTML = ""; // Clear existing subject links

          // Add an 'All' or 'Aleatório' option
          const allLink = document.createElement("a");
          allLink.href = "#all";
          allLink.classList.add("subject-link");
          allLink.textContent = "Todas"; // Or 'Aleatório'
          allLink.dataset.subjectId = ""; // Use empty string for all/random
          subjectsMenu.appendChild(allLink);

          subjects.forEach((subject) => {
            const subjectLink = document.createElement("a");
            subjectLink.href = `#${subject.nome
              .toLowerCase()
              .replace(/\s+/g, "-")}`; // Use hash for filtering
            subjectLink.classList.add("subject-link");
            subjectLink.textContent = subject.nome;
            subjectLink.dataset.subjectId = subject.id; // Store subject ID
            subjectsMenu.appendChild(subjectLink);
          });

          // Automatically click the 'Todas' link on initial load
          subjectsMenu.querySelector("a.subject-link").click();
        } catch (error) {
          console.error("Error fetching subjects:", error);
          // If fetching subjects fails, just display the placeholder videos
          displayPlaceholderVideos(8); // Display a few placeholder videos if subjects can't be fetched
        }
      }

      // Function to display a specific number of placeholder video cards
      function displayPlaceholderVideos(count) {
        videoGrid.innerHTML = ""; // Clear existing content
        for (let i = 0; i < count; i++) {
          videoGrid.innerHTML += placeholderVideoCardHTML;
        }
      }

      // Function to fetch and display aulas
      async function fetchAndDisplayAulas(materiaId = null) {
        try {
          let url = "/api/aulas";
          if (materiaId) {
            url = `/api/aulas?materia_id=${materiaId}`;
          }

          const response = await fetch(url);
          const aulas = await response.json();

          videoGrid.innerHTML = ""; // Clear existing video cards

          if (aulas.length === 0) {
            // If no aulas are returned, display placeholder videos
            displayPlaceholderVideos(8); // Display a few placeholders
            // videoGrid.innerHTML = '<p style="text-align: center; width: 100%; color: #666;">Nenhuma aula encontrada para esta matéria.</p>';
            return;
          }

          // Render fetched aulas
          aulas.forEach((aula) => {
            const videoCard = document.createElement("div");
            videoCard.classList.add("video-card");
            videoCard.innerHTML = `
              <div class="video-placeholder">${aula.titulo || "Vídeo"}</div>
              <div
                style="
                  display: flex;
                  justify-content: center;
                  padding: 1rem;
                  background: white;
                  border-top: 1px solid #eee;
                "
              >
                <a href="/aula/${aula.id}" style="text-decoration: none">
                  <button
                    class="btn-ver-aula"
                    style="
                      background: #7950f2;
                      color: white;
                      border: none;
                      border-radius: 6px;
                      padding: 0.5rem 1.2rem;
                      font-size: 1rem;
                      cursor: pointer;
                      transition: background 0.2s;
                    "
                  >
                    Ver Aula
                  </button>
                </a>
              </div>
            `;
            videoGrid.appendChild(videoCard);
          });
        } catch (error) {
          console.error("Error fetching aulas:", error);
          // If fetching aulas fails, display placeholder videos
          displayPlaceholderVideos(8); // Display a few placeholders
          // videoGrid.innerHTML = '<p style="text-align: center; width: 100%; color: red;">Erro ao carregar aulas.</p>';
        }
      }

      // Event listener for subject links (using event delegation)
      subjectsMenu.addEventListener("click", (event) => {
        event.preventDefault(); // Prevent default link behavior
        const target = event.target;
        if (target.classList.contains("subject-link")) {
          // Remove active class from all links
          subjectsMenu.querySelectorAll(".subject-link").forEach((link) => {
            link.classList.remove("active");
          });
          // Add active class to the clicked link
          target.classList.add("active");

          const subjectId = target.dataset.subjectId;
          fetchAndDisplayAulas(subjectId || null); // Fetch aulas for the clicked subject (null for 'Todas')
        }
      });

      // Initial load: Fetch subjects and then aulas
      fetchAndDisplaySubjects();
      // Initial aula fetch is now triggered after subjects are displayed and 'Todas' is clicked
    </script>

