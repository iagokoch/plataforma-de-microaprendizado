      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        async function carregarGraficoAcessos() {
          const response = await fetch("/api/users/acessos/semana");
          const acessos = await response.json();

          // Montar array de datas dos últimos 7 dias
          const dias = ["Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sáb"];
          const hoje = new Date();
          let labels = [];
          let data = [];
          for (let i = 6; i >= 0; i--) {
            const d = new Date(hoje);
            d.setDate(hoje.getDate() - i);
            labels.push(dias[d.getDay()]);
            const dataStr = d.toISOString().slice(0, 10);
            data.push(
              acessos.some((a) => a.data_acesso.slice(0, 10) === dataStr)
                ? 1
                : 0
            );
          }

          const ctx = document
            .getElementById("sequenciaGrafico")
            .getContext("2d");
          new Chart(ctx, {
            type: "line",
            data: {
              labels: labels,
              datasets: [
                {
                  label: "Dias de acesso",
                  data: data,
                  borderColor: "#7950f2",
                  backgroundColor: "rgba(121, 80, 242, 0.1)",
                  fill: true,
                  tension: 0.4,
                },
              ],
            },
            options: {
              scales: {
                y: { beginAtZero: true, stepSize: 1 },
              },
            },
          });
        }
        carregarGraficoAcessos();
      </script>
